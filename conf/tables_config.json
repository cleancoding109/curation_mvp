{
  "tables": [
    {
      "table_name": "customer",
      "source_table": "ltc_insurance.unified_dev.unified_customer_scd2",
      "target_table": "ltc_insurance.standardized_data_layer.customer",
      "scd_type": 2,
      "business_key_columns": ["customer_id"],
      "source_system_column": "source_system",
      "watermark_column": "ingestion_ts",
      "target_watermark_column": "processing_timestamp",
      "lookback_interval": "1 HOURS",
      "dedup_order_columns": ["ingestion_ts DESC"],
      "scd2_columns": {
        "effective_start_date": "effective_start_date",
        "effective_end_date": "effective_end_date",
        "is_current": "is_current"
      },
      "track_columns": [
        "full_name",
        "date_of_birth",
        "email",
        "phone_number",
        "state_code",
        "postal_code",
        "customer_status"
      ],
      "transformation_sql_path": "conf/sql/customer_transform.sql",
      "enabled": true,
      "description": "Standardized Customer Data with History"
    },
    {
      "table_name": "claims",
      "source_table": "ltc_insurance.unified_dev.unified_claims_scd2",
      "target_table": "ltc_insurance.standardized_data_layer.claims",
      "scd_type": 1,
      "business_key_columns": ["claim_id"],
      "source_system_column": "source_system",
      "watermark_column": "ingestion_ts",
      "target_watermark_column": "processing_timestamp",
      "lookback_interval": "1 HOURS",
      "dedup_order_columns": ["ingestion_ts DESC"],
      "transformation_sql_path": "conf/sql/claims_transform.sql",
      "enabled": true,
      "description": "Standardized Claims Data"
    }
  ],
  "global_settings": {
    "catalog": "ltc_insurance",
    "schema_bronze": "unified_dev",
    "schema_silver": "standardized_data_layer",
    "default_watermark_column": "ingestion_ts",
    "default_lookback_interval": "1 HOURS",
    "default_dedup_order_columns": ["ingestion_ts DESC"],
    "batch_timestamp_format": "yyyy-MM-dd HH:mm:ss.SSS",
    "scd2_end_date_value": "9999-12-31 23:59:59",
    "log_level": "INFO",
    "default_source_timezone": "UTC",
    "default_target_timezone": "America/New_York"
  }
}
