{
  "tables": [
    {
      "table_name": "silver_claimants",
      "source_table": "ltc_insurance.raw_data_layer.claimants_streaming",
      "target_table": "ltc_insurance.curated_data.claimants",
      "scd_type": 2,
      "business_key_columns": ["claimant_id"],
      "source_system_column": "source_system",
      "watermark_column": "ingestion_ts",
      "target_watermark_column": "processing_timestamp",
      "lookback_interval": "1 HOURS",
      "dedup_order_columns": ["ingestion_ts DESC", "_kafka_offset DESC"],
      "scd2_columns": {
        "effective_start_date": "effective_start_date",
        "effective_end_date": "effective_end_date",
        "is_current": "is_current"
      },
      "track_columns": [
        "first_name",
        "last_name",
        "date_of_birth",
        "address",
        "city",
        "state",
        "zip_code",
        "phone",
        "email",
        "care_level"
      ],
      "transformation_sql_path": "conf/sql/claimants_transform.sql",
      "enabled": true,
      "description": "LTC Claimants (Policyholders) with SCD Type 2 for demographic history"
    },
    {
      "table_name": "silver_policies",
      "source_table": "ltc_insurance.raw_data_layer.policies_streaming",
      "target_table": "ltc_insurance.curated_data.policies",
      "scd_type": 2,
      "business_key_columns": ["policy_id"],
      "source_system_column": "source_system",
      "watermark_column": "ingestion_ts",
      "target_watermark_column": "processing_timestamp",
      "lookback_interval": "1 HOURS",
      "dedup_order_columns": ["ingestion_ts DESC", "_kafka_offset DESC"],
      "scd2_columns": {
        "effective_start_date": "effective_start_date",
        "effective_end_date": "effective_end_date",
        "is_current": "is_current"
      },
      "track_columns": [
        "policy_status",
        "coverage_type",
        "daily_benefit_amount",
        "benefit_period",
        "elimination_period",
        "premium_amount"
      ],
      "transformation_sql_path": "conf/sql/policies_transform.sql",
      "enabled": true,
      "description": "LTC Insurance Policies with SCD Type 2 for coverage history"
    },
    {
      "table_name": "silver_claims",
      "source_table": "ltc_insurance.raw_data_layer.claims_streaming",
      "target_table": "ltc_insurance.curated_data.claims",
      "scd_type": 1,
      "business_key_columns": ["claim_id"],
      "source_system_column": "source_system",
      "watermark_column": "ingestion_ts",
      "target_watermark_column": "processing_timestamp",
      "lookback_interval": "1 HOURS",
      "dedup_order_columns": ["ingestion_ts DESC", "_kafka_offset DESC"],
      "transformation_sql_path": "conf/sql/claims_transform.sql",
      "enabled": true,
      "description": "LTC Claims with SCD Type 1 (Upsert for claim status updates)"
    }
  ],
  "global_settings": {
    "catalog": "ltc_insurance",
    "schema_bronze": "raw_data_layer",
    "schema_silver": "curated_data",
    "default_watermark_column": "ingestion_ts",
    "default_lookback_interval": "1 HOURS",
    "default_dedup_order_columns": ["ingestion_ts DESC"],
    "batch_timestamp_format": "yyyy-MM-dd HH:mm:ss.SSS",
    "scd2_end_date_value": "9999-12-31 23:59:59",
    "log_level": "INFO",
    "default_source_timezone": "UTC",
    "default_target_timezone": "America/New_York"
  }
}
